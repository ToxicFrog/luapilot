include "pmlib/c.lua"

--
-- compiler settings
--
CC              = "mpicc"
CCOPTIMIZE      = "-g"
INCLUDES        = "-Iinclude/"


--
-- linker settings
--
LIBS            = { "-llua", "-lpilot" }



SRCDIR          = "src/"

sources = {
    cfile "lpi_init.c";
    cfile "lpi_abort.c";
    cfile "lpi_channel.c";
    cfile "lpi_log.c";
    cfile "lpi_names.c";
    cfile "lpi_process.c";
    cfile "lpi_read.c";
    cfile "lpi_time.c";
    cfile "lpi_util.c";
    cfile "lpi_write.c";
}       

objects = group(sources)

pilotstatic = lib {
    install = pm.install "libpilot.a";
--    outputs = { "%U%-libpilot.a" };

    objects;
}

luapilot = program {
    install = pm.install "luapilot";
    cfile "luapilot.c";
    pilotstatic;
}

pilotlib = sharedlib {
    install = pm.install "pilot.so";

    objects;
}

default = group { luapilot, pilotlib, pilotstatic }

test = simple {
     command = "mpiexec -c 4 lua test.lua";
     outputs = {"%U%"};
}
